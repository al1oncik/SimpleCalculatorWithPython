<Button>
    font_size: 35
    background_normal : ''
    background_color : (15/255,15/255,15/255)
    color : (1,1,1)
    italic: True
    bold: True
    outline_color: (0,0,0)
    outline_width: 4

<CalculatorLayout>
    BoxLayout:
        orientation: 'vertical'
        size: root.width,root.height
        TextInput:
            id: textinput
            text: "0"
            font_size: 60
            background_color : (1,1,1)
            halign: "right"
            size_hint: (1,.2)

        GridLayout:
            cols: 4
            spacing: 2

            Button:
                text: "%"
                on_press : root.add_operator("//")
            Button:
                text: "<<"
                on_press : root.remove()
            Button:
                id: clear_button
                text: "C"
                on_press: root.clear()
            Button:
                text: "/"
                background_color: (1, 137/255, 3/255)
                on_press : root.add_operator("/")
            Button:
                text: "7"
                background_color: (0, 248/255, 17/255)
                on_press: root.button_press("7")
            Button:
                text: "8"
                background_color: (0, 248/255, 17/255)
                on_press: root.button_press("8")
            Button:
                text: "9"
                background_color: (0, 248/255, 17/255)
                on_press: root.button_press("9")
            Button:
                text: "x"
                background_color: (1, 137/255, 3/255)
                on_press : root.add_operator("*")
            Button:
                text: "4"
                background_color: (0, 248/255, 17/255)
                on_press: root.button_press("4")
            Button:
                text: "5"
                background_color: (0, 248/255, 17/255)
                on_press: root.button_press("5")
            Button:
                text: "6"
                background_color: (0, 248/255, 17/255)
                on_press: root.button_press("6")
            Button:
                text: "-"
                background_color: (1, 137/255, 3/255)
                on_press : root.add_operator("-")
            Button:
                text: "1"
                background_color: (0, 248/255, 17/255)
                on_press: root.button_press("1")
            Button:
                text: "2"
                background_color: (0, 248/255, 17/255)
                on_press: root.button_press("2")
            Button:
                text: "3"
                background_color: (0, 248/255, 17/255)
                on_press: root.button_press("3")
            Button:
                text: "+"
                background_color: (1, 137/255, 3/255)
                on_press: root.add_operator("+")
            Button:
                text: "+/-"
                on_press : root.neg_pos()
            Button:
                text: "0"
                background_color: (0, 248/255, 17/255)
                on_press: root.button_press("0")
            Button:
                text: "."
                on_press : root.button_press(".")
            Button:
                text: "="
                on_press: root.get_result()
            